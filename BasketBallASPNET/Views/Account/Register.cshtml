@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>
<div class="col-md-12">
    @if (ViewData["Success"] != null)
    {
        <div class="alert alert-success" role="alert">
            @ViewData["Success"]
        </div>
    }

    @if (ViewData["Error"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewData["Error"]
        </div>
    }
</div>
<form asp-action="RegisterCreate" method="POST">
    <div class="form-group" style="color: black;">
        <label class="sr-only" for="Email">Email</label>
        <input id="Email" type="email" asp-for="Email"
               class="form-control" placeholder="Voer Email in" required >
        <br>
    </div>
    <div class="form-group" style="color: black;">
        <label class="sr-only" for="FirstName">Voornaam</label>
        <input id="FirstName" type="text" asp-for="FirstName"
               class=" form-control" placeholder="Voer voornaam in" pattern="^(?!.*[0-9])(?!.*[!@("@")#$%^&*_=+-]).{4,}$" required><br>
    </div>

    <div class="form-group" style="color: black;">
        <label class="sr-only" for="LastName">Achternaam</label>
        <input id="LastName" type="text" asp-for="LastName"
               class=" form-control" placeholder="Voer achternaam in" pattern="^(?!.*[0-9])(?!.*[!@("@")#$%^&*_=+-]).{4,}$" required><br>
    </div>
    <div class="form-group" style="color: black;">
        <select name="Geslacht" id="Geslacht" placeholder="Kies een Geslacht" required>
            <option value="Man">Man</option>
            <option value="Vrouw">Vrouw</option>
        </select>
        <select name="ClubID" id="ClubID" placeholder="Kies je club" required>
            <option value="1">ELBC</option>
            <option value="2">Red Barons</option>
            <option value="3">Fontys Ber</option>
            <option value="4">Aribo</option>
            <option value="5">Lions</option>
        </select>
    </div>

    <div class="form-group" style="color: black;">
        <label class="sr-only" for="Wachtwoord">Wachtwoord</label>
        <input id="Wachtwoord" type="password" asp-for="Wachtwoord"
               class=" form-control" placeholder="Voer wachtwoord in" pattern="^(?!.*\s).{4,}$" required><br>
    </div>

    <div class="form-group" style="color: black;">
        <label class="sr-only" for="BevestigWachtwoord">Bevestig wachtwoord</label>
        <input id="BevestigWachtwoord" type="password" asp-for="BevestigWachtwoord"
               class=" form-control" placeholder="Voer wachtwoord nog een keer in" pattern="^(?!.*\s).{4,}$" required><br>
    </div>

    <div class="form-group" style="color: black;">
        <label class="sr-only" for="Geboortedatum">Geboortedatum</label>
        <input id="Geboortedatum" type="date" asp-for="GeboorteDatum"
               class=" form-control" placeholder="Voer geboortedatum in" 
               pattern="^(?:(?:31(\/|-|\.)(?:0?[13578]|1[02]))\1|(?:(?:29|30)(\/|-|\.)(?:0?[13-9]|1[0-2])\2))(?:(?:1[6-9]|[2-9]\d)?\d{2})$|^(?:29(\/|-|\.)0?2\3(?:(?:(?:1[6-9]|[2-9]\d)?(?:0[48]|[2468][048]|[13579][26])|(?:(?:16|[2468][048]|[3579][26])00))))$|^(?:0?[1-9]|1\d|2[0-8])(\/|-|\.)(?:(?:0?[1-9])|(?:1[0-2]))\4(?:(?:1[6-9]|[2-9]\d)?\d{2})$" 
               required><br>
    </div>
    <div>
        <button type="submit" class="btn btn-primary btn-lg" asp-for=>
            Create &nbsp;
            <span class="glyphicon glyphicon-save"></span>
        </button>
    </div>


</form>
<button class="btn btn-default btn-sm" href="##" onClick="history.go(-1); return false;">Go back</button>