@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<form asp-action="Register" method="POST">
    <div class="form-group" style="color: black;">
        <label class="sr-only" for="Email">Email</label>
        <input id="Email" type="text" asp-for="Email" class=" form-control" placeholder="Voer Email in"><br>
    </div>
    <div class="form-group" style="color: black;">
        <label class="sr-only" for="FirstName">Voornaam</label>
        <input id="FirstName" type="text" asp-for="FirstName" class=" form-control" placeholder="Voer voornaam in"><br>
    </div>

    <div class="form-group" style="color: black;">
        <label class="sr-only" for="LastName">Achternaam</label>
        <input id="LastName" type="text" asp-for="LastName" class=" form-control" placeholder="Voer achternaam in"><br>
    </div>
    <div class="form-group" style="color: black;">
        <select name="Geslacht" id="Geslacht"placeholder="Kies een Geslacht">
            <option value="Man">Man</option>
            <option value="Vrouw">Vrouw</option>
        </select>
        <select name="Club" id="ClubID" placeholder="Kies je club">
            <option value="1">ELBC</option>
            <option value="2">Red Barons</option>
            <option value="3">Fontys Ber</option>
            <option value="4">Aribo</option>
            <option value="5">Lions</option>
        </select>
    </div>

    <div class="form-group" style="color: black;">
        <label class="sr-only" for="Wachtwoord">Wachtwoord</label>
        <input id="Wachtwoord" type="password" asp-for="Wachtwoord" class=" form-control" placeholder="Voer wachtwoord in"><br>
    </div>

    <div class="form-group" style="color: black;">
        <label class="sr-only" for="BevestigWachtwoord">Bevestig wachtwoord</label>
        <input id="BevestigWachtwoord" type="password" asp-for="BevestigWachtwoord" class=" form-control" placeholder="Voer wachtwoord nog een keer in"><br>
    </div>

    <div class="form-group" style="color: black;">
        <label class="sr-only" for="Geboortedatum">Geboortedatum</label>
        <input id="Geboortedatum" type="date" asp-for="GeboorteDatum" class=" form-control" placeholder="Voer geboortedatum in"><br>
    </div>
    <div>
        <button type="submit" class="btn btn-primary btn-lg" asp-for=>
            Create &nbsp;
            <span class="glyphicon glyphicon-save"></span>
        </button>
    </div>


</form>