@model InlogVM
@{
    ViewData["Title"] = "Login";
}

<h1>Login van Account</h1>

<div class="col-md-12">
    @if (ViewData["Error"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewData["Error"]
        </div>
    }
</div>

<form asp-action="LoginAction" method="POST">
    <div class="form-group" style="color: black;">
        <label class="sr-only" for="Email">Email</label>
        <input id="Email" type="text" asp-for="Email" 
        class=" form-control" placeholder="Voer Email in" required><br>
    </div>
    <div class="form-group" style="color: black;">
        <label class="sr-only" for="Wachtwoord">Wachtwoord</label>
        <input id="Wachtwoord" type="password" asp-for="Wachtwoord" 
        class=" form-control" placeholder="Voer wachtwoord in" required><br>
    </div>

    <button type="submit" class="btn btn-primary btn-lg" asp-for=>Login</button>
</form>

<div>
    <a asp-action="Register" class=" form-control "> Registreren</a>
</div>

<button class="btn btn-default btn-sm" href="##" onClick="history.go(-1); return false;">Go back</button>