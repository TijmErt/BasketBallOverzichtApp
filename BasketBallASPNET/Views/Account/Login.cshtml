@model InlogVM
@{
    ViewData["Title"] = "Login";
}

<h1>Login van Account</h1>

<form asp-action="login" method="POST">
    <div class="form-group" style="color: black;">
        <label class="sr-only" for="Email">Email</label>
        <input id="Email" type="text" asp-for="Email" class=" form-control" placeholder="Voer Email in"><br>
    </div>
    <div class="form-group" style="color: black;">
        <label class="sr-only" for="Wachtwoord">Wachtwoord</label>
        <input id="Wachtwoord" type="password" asp-for="Wachtwoord" class=" form-control" placeholder="Voer wachtwoord in"><br>
    </div>

    <button type="submit" class="btn btn-primary btn-lg" asp-for=>Login</button>
</form>