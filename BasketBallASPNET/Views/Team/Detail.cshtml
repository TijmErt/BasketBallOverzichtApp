@model List<SpelerVM>

@{
    ViewData["Title"] = "Detail";
}

<h1>Team Inhoud</h1>
<br />
<div class="container-fluid">
    <ul class="list-group">

        @foreach (SpelerVM vm in Model)
        {
            @if (vm.TeamID == Context.Session.GetInt32("TempTeamID"))
            {
                <form asp-action=RemoveSpelerFromTeam asp-route-SpelerID=@vm.ID method="POST">
                    <li class="list-group-item col-sm-3" id"="SpelerArea">@vm.FirstName &nbsp &nbsp &nbsp SpelerNmr: @vm.SpelerNummer</li>

                        @if (3 != Context.Session.GetInt32("RoleID"))
                        {

                        <button type="submit" class="btn btn-danger btn-sm" aria-describedby="SpelerArea">Remove Speler</button>
                        }
                </form>
            }
        }
    </ul>
</div>

@if (3 != Context.Session.GetInt32("RoleID"))
{
    <form asp-action="InsertPlayerToTeam" method="POST">
        <div>
            <select name="SpelerID" id="SpelerID" placeholder="Kies een Speler">
                @foreach (SpelerVM vm in Model)
                {
                    @if (vm.TeamID == null)
                    {
                        <option value=@vm.ID> @vm.FirstName @vm.LastName</option>
                    }
                }
            </select>
            <input type="number" id="SpelerNummer" name="SpelerNummer" step="1" min="1" required>
            <button type="submit" class="btn btn-success btn-sm">
                Add Speler &nbsp;
                <span class="glyphicon glyphicon-ok"></span>
            </button>
        </div>
    </form>
}
<br />
<button class="btn btn-default btn-sm" href="##" onClick="history.go(-1); return false;">Go back</button>
