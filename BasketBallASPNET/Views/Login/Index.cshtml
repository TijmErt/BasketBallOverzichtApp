@model AccountVM
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<form asp-action="Index">
    <div class="form-group" style="color: black;">
        <label class="sr-only" for="exampleInputEmail2">Gebruikersnaam</label>
        <input type="text" asp-for="Email" class=" form-control" placeholder="Voer Email in"><br>
    </div>
    <div class="form-group">
        <label class="sr-only" for="exampleInputPassword2">Wachtwoord</label>
        <input type="password" asp-for="Wachtwoord" class=" form-control" placeholder="Voer wachtwoord in">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-block">Login</button>
    </div>

</form>

